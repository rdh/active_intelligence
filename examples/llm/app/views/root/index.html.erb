
<div class="row">
  <h2>Settings</h2>
  <pre><%= JSON.pretty_generate(@settings) %></pre>
</div>

<div class="row">
  <h2>Prompt</h2>

  <%= bootstrap_form_tag url: '/' do |f| %>
    <%= f.text_area :prompt, value: @prompt %>
    <%= f.submit 'Generate' %>
  <% end %>
</div>

<% if @generated %>
  <div class="row">
    <h2>Generated</h2>
    <pre><%= @generated %></pre>
  </div>
<% end %>